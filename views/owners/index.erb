<main class="content-container">
  <div class="trainers-form">

      <table>
        <th>Name</th>
        <th>Username</th>
        <th></th>
          <%for owner in @owners%>
        <tr>
          <td><%=owner.full_name%></td>
          <td><%=owner.username%></td>
