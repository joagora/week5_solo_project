<form class="registration" action="/horses/<%=@horse.id%>" method="post">
  <label for="name"></label>
  <input type="text" name="name" value="<%=@horse.name%>">
  <label for="breed"></label>
  <input type="text" name="breed" value="<%=@horse.breed%>">
  <label for="hair_coat"></label>
  <input type="text" name="hair_coat" value="<%=@horse.hair_coat%>">
  <label for="health_details">If your horse has any health-issues, specify it here:</label>
  <textarea name="health_details" rows="4" cols="80" value="<%=@horse.health_details%>"></textarea>
  <input type="submit" value="EDIT DETAILS">
</form>
