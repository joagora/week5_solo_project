<a href="/horses/new"><button class="add-button button">ADD HORSE</button></a>
<section class="horse-list list">
<%for horse in @horses%>
  <section class="horse item-section">
      <p>Name: <%=horse.name%></p>
      <p>Breed: <%=horse.breed%></p>
      <p>Hair coat <%=horse.hair_coat%></p>
      <section class="action-buttons">
        <a href="/horses/<%=horse.id%>/edit"><button class="edit-button button">EDIT</button></a>
        <form class="delete-button" action="/horses/<%=horse.id%>/delete" method="post">
          <input type="submit" name="delete" value="DELETE" class="button">
        </form>
      </section>
      <a href="/trainings/new?horse_id=<%=horse.id()%>"><button>Add training</button></a>
  </section>
<%end%>
  <a href="/admin"><button>Go back</button></a>
