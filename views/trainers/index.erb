  </aside>
  <main class="management-area">
    <div class="content-container">

    </div>
    <div class="trainer-table">
      <main class="form-container">
        <table>
          <th>Name</th>
          <th></th>
          <%for trainer in @trainers%>
          <tr>
            <td><%=trainer.full_name%></td>
            <td>
              <section class="action-buttons">
                <a href="/trainers/<%=trainer.id%>/edit"><button class="edit-button button-small">Edit</button></a>
                <form action="/trainers/<%=trainer.id%>/delete" method="post">
                  <input type="submit" name="delete" value="Delete" class="delete-button button-small">
                </form>
              </section>
            </td>
            <%end%>
          </tr>
        </table>
      </main>
    </div>
      <a href="/admin"><button class="more-button button">Go back</button></a>
