
<div class="content-container">
  <%for training in @sorted_trainings%>

    <dl>
      <dt>Time</dt>
      <dd><%=training.scheduled_time%></dd>
      <dt>Date</dt>
      <dd><%=training.scheduled_date%></dd>
      <dt>Type</dt>
      <dd><%=training.type%></dd>
      <dt>Trainer</dt>
      <dd><%=training.trainer.full_name%></dd>
      <dt>Horse</dt>
      <dd><%=training.horse.name%></dd>
      <dt>Week day</dt>
      <dd><%=training.day_of_week%></dd>
    </dl>
    <a href="/trainings/<%=training.id%>/edit"><button class="button edit-button">Edit</button></a>
  <%end%>
</end>
