<div class="content-container">
    <form class = "registration" action = "/trainings" method = "post">
          <select class="input-field" name="type" placeholder="Type of training">
            <%for type in @types%>
              <option value="<%=type%>" <%= 'selected' if @training.type == type %>><%=type%></option>
            <%end%>
          </select>
          <select class="input-field" name="day_of_week" placeholder="Day of week">
            <%for week_day in @week_days%>
              <option value="<%=week_day%>" <%= 'selected' if @training.day_of_week == week_day %>><%=week_day%></option>
            <%end%>
          </select>

          <select class="input-field" name="trainer_id" placeholder="Trainer">
            <%for trainer in @trainers%>
              <option value="<%=trainer.id%>" <%= 'selected' if @training.trainer.id == trainer.id %>><%=trainer.full_name%></option>
            <%end%>
          </select>

          <input class="input-field" type="number" name="duration" placeholder="Duration" value="<%=@training.duration%>">

        <input class="log-in-button button" type="submit" value="Edit">

</div>
