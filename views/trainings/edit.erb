<div class="log-in-page green-page">
  <div class="form-container">
    <form class = "registration" action = "/trainings/<%=@training.id%>" method = "post">
      <div class="input-container">
        <select class="input-field" name="type" placeholder="Type of training">
          <%for type in @types%>
          <option value="<%=type%>" <%= 'selected' if @training.type == type %>><%=type.capitalize%></option>
          <%end%>
        </select>

        <div "input-container">
          <select required="required" class="input-field" name="trainer_id" placeholder="Trainer">
            <%for trainer in @trainers%>
            <option value="<%=trainer.id%>" <%= 'selected' if @training.trainer.id == trainer.id %>><%=trainer.full_name%></option>
            <%end%>
          </select>
        </select>
      </div>
      <div "input-container">
        <input class="input-field" type="number" name="duration" placeholder="Duration" value="<%=@training.duration%>" required>
      </div>
      <div "input-container">
        <input class="input-field" type="date" name="scheduled_date" placeholder="Date" value="<%=@training.scheduled_date%>" required>
      </div>
      <div "input-container">
        <input class="input-field" type="time" name="scheduled_time" placeholder="Time" value="<%=@training.scheduled_time%>" required>
      </div>
      <input type="hidden" name="horse_id" value="<%=@training.horse_id%>">
      <input class="log-in-button button" type="submit" value="Edit">
    </div>
  </div>
</div>
